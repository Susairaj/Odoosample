<?xml version="1.0" encoding="utf-8"?>
<openerp>
	<data>

		<record id="psit_materials_units_view_tree" model="ir.ui.view">
			<field name="name">materials.units.tree</field>
			<field name="model">materials.units</field>
			<field name="arch" type="xml">
				<tree string="Materials Units">
					<field name="name" />
				</tree>
			</field>
		</record>

		<record id="psit_materials_units_view_form" model="ir.ui.view">
			<field name="name">materials.units.form</field>
			<field name="model">materials.units</field>
			<field name="arch" type="xml">
				<form string="Materials Units">
					<sheet>
						<group>
							<field name="name" placeholder="Unit" />
						</group>
					</sheet>
				</form>
			</field>
		</record>

		<record id="materials_units_action" model="ir.actions.act_window">
			<field name="name">Materials Units</field>
			<field name="res_model">materials.units</field>
			<field name="view_type">form</field>
			<field name="view_mode">tree,form</field>
		</record>
		
	</data>
</openerp>